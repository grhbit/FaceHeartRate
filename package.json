{
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "concurrently 'yarn run start:expo' 'yarn run start:typecheck'",
    "start:expo": "expo start",
    "start:typecheck": "tsc --noEmit --watch",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "eject": "expo eject",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "lint": "tslint --project tsconfig.json -t codeFrame 'src/**/*.ts' 'src/**/*.tsx'"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "expo": "^31.0.2",
    "expokit": "31.0.2",
    "react": "16.5.0",
    "react-native": "https://github.com/expo/react-native/archive/sdk-31.0.0.tar.gz",
    "react-navigation": "^2.13",
    "styled-components": "^3"
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/expo": "^31.0.1",
    "@types/jest": "^23.3.10",
    "@types/react": "^16.7.13",
    "@types/react-native": "^0.57.15",
    "@types/react-navigation": "^2.13.7",
    "@types/styled-components": "^3",
    "babel-core": "^6.26.3",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-preset-expo": "^5.0.0",
    "concurrently": "^4.1.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "jest-expo": "^31.0.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "react-test-renderer": "^16.6.3",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.2"
  },
  "jest": {
    "preset": "react-native",
    "roots": [
      "./src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverageFrom": [
      "*.{js,ts}"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$"
  },
  "private": true
}
